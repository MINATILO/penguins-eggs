#!/bin/sh
# preinst script for eggs-7.7.32
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    rm -rf /etc/calamares/
    rm -rf /etc/penguins-eggs.d/
    rm -rf /usr/local/share/penguins-eggs/
    rm -rf /usr/lib/calamares/
    rm -f /etc/penguins-eggs.conf
    rm -f /usr/share/applications/penguins-eggs-adapt.desktop
    rm -f /usr/share/applications/penguins-eggs.desktop
    rm -f /usr/share/applications/penguins-eggs-installer.desktop
    rm -f /usr/bin/penguins-links-add.sh
    rm -rf /usr/lib/penguins-eggs/
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
