#!/bin/sh
# preinst script for eggs-7.7.32
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
    # pulizia dei link non rimovibili da apt
    rm -rf /usr/lib/penguins-eggs/distros

    # eggc configurazione
    # rm -rf /etc/penguins-eggs.d/
    rm -rf /usr/local/share/penguins-eggs/

    # sanitize applications links
    rm -f /usr/share/applications/penguins-adapt.destop
    rm -f /usr/share/applications/penguins-clinstaller.destop
    rm -f /usr/share/applications/penguins-eggs.destop

    # sanitize xdg links
    rm -f /etc/xdg/autostart/add-penguins-desktop-icons.desktop
    rm -f /etc/xdg/autostart/add-penguins-links.desktop

    # sanitize others
    rm -f /usr/bin/pve-live.sh
    rm -f /etc/systemd/system/pve-live.service

    # eggs old files not used now
    rm -f /etc/penguins-eggs.conf

    ###########################################################
    # calamares
    ###########################################################

    # sanitize calamares modules
    rm -rf /etc/calamares

    # sanitize calamares global modules
    calamares_global_modules="/usr/lib/calamares/modules/"
    if [ arch = "x86_64" ]; then
        calamares_global_modules="/usr/lib/x86_64-linux-gnu/calamares/modules/"
    fi

    # buster/beowulf sanitize calamares global modules
    rm -rf "$calamares_global_modules/bootloader-config"
    rm -rf "$calamares_global_modules/create-tmp"
    rm -rf "$calamares_global_modules/remove-link"
    rm -rf "$calamares_global_modules/sources-yolk"
    rm -rf "$calamares_global_modules/sources-yolk-unmount"

    # buster/beowulf sanitize calamares scripts
    rm -f "/usr/sbin/bootloader-config*"
    rm -f "/usr/sbin/create-tmp*"
    rm -f "/usr/sbin/remove-link*"
    rm -f "/usr/sbin/sources-yolk*"
    rm -f "/usr/sbin/sources-yolk-unmount*"

    # bionic sanitize calamares global modules
    rm -rf "$calamares_global_modules/automirror"
    rm -rf "$calamares_global_modules/add386arch"
    rm -rf "$calamares_global_modules/after-bootloader"
    rm -rf "$calamares_global_modules/before-bootloader"
    rm -rf "$calamares_global_modules/bug"

    # bionic sanitize calamares scripts
    rm -f "/usr/sbin/add386arch*"
    rm -f "/usr/sbin/after-bootloader*"
    rm -f "/usr/sbin/before-bootloader*"
    rm -f "/usr/sbin/bug.*"


    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
